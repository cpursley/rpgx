  location /dogs {
      postgres_pass database;
      rds_json on;
      rds_json_root 'data';
    
      # GET
      # usage: CURL http://localhost:8888/
      postgres_query GET "SELECT * FROM dogs_view";
      postgres_rewrite HEAD GET no_rows 404;
    
    
      # POST
      # usage: CURL -X POST "http://localhost:8888/dogs?name=9livez&about=I've got nine lives"
      postgres_escape $escaped_name $arg_name;
      postgres_escape $escaped_paws $arg_paws;
      postgres_escape $escaped_vip $arg_vip;
      
      postgres_query   POST   "INSERT INTO dogs (name, paws, vip) VALUES ($escaped_name, $escaped_paws, $escaped_vip)";
      postgres_rewrite POST   changes 201;
    
    }
  
    location ~ /dogs/(?<id>\d+) {
      postgres_pass database;
      rds_json on;
      rds_json_root 'data';
    
      # GET
      # usage: CURL http://localhost:8888/dogs/1
      postgres_escape  $escaped_id $id;
      postgres_query   HEAD GET "SELECT * FROM dogs WHERE (id = $escaped_id)";
      postgres_rewrite HEAD GET no_rows 404;
    
    
      # PUT
      # usage: CURL -X PUT "http://localhost:8888/cats/1?name=Hot Wiskerz&about=Sweatin & meowin"
      postgres_escape $escaped_name $arg_name;
      postgres_escape $escaped_paws $arg_paws;
      postgres_escape $escaped_vip $arg_vip;
      
      postgres_query   PUT "UPDATE dogs SET name = $escaped_name, paws = $escaped_paws, vip = $escaped_vip WHERE (id = $escaped_id)";
      postgres_rewrite PUT no_changes 410;
    
    
      # DELETE
      # usage: curl -X DELETE http://localhost:8888/dogs/1
      postgres_query   DELETE "DELETE FROM dogs WHERE (id = $escaped_id)";
      postgres_rewrite DELETE no_changes 410;
      postgres_rewrite DELETE changes 204;
    
    }
  
